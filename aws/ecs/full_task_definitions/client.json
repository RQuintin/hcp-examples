{
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT}:role/ecs/ecs-to-hcp-consul-ecs-task-execution-role",
  "containerDefinitions": [
    {
      "portMappings": [
        {
          "hostPort": 8301,
          "protocol": "tcp",
          "containerPort": 8301
        },
        {
          "hostPort": 8301,
          "protocol": "udp",
          "containerPort": 8301
        },
        {
          "hostPort": 8302,
          "protocol": "tcp",
          "containerPort": 8302
        },
        {
          "hostPort": 8300,
          "protocol": "tcp",
          "containerPort": 8300
        },
        {
          "hostPort": 8600,
          "protocol": "tcp",
          "containerPort": 8600
        },
        {
          "hostPort": 8600,
          "protocol": "udp",
          "containerPort": 8600
        },
        {
          "hostPort": 8501,
          "protocol": "tcp",
          "containerPort": 8501
        },
        {
          "hostPort": 8502,
          "protocol": "tcp",
          "containerPort": 8502
        }
      ],
      "command": [
        "sh",
        "-c",
        "mkdir -p /consul/config; echo $CONSUL_CERTIFICATE | base64 -d > /tmp/ca.pem; echo $CONSUL_CONFIG | base64 -d > /consul/config/client_config.json; consul agent -bind=0.0.0.0 -client=0.0.0.0 -advertise=$(curl -s http://169.254.169.254/latest/meta-data/local-ipv4) -node=$(curl -s http://169.254.169.254/latest/meta-data/local-hostname) -data-dir=/consul/data -config-dir=/consul/config"
      ],
      "cpu": 10,
      "environment": [
        {
          "name": "CONSUL_HTTP_ADDR",
          "value": "https://localhost:8501"
        },
        {
          "name": "CONSUL_HTTP_SSL_VERIFY",
          "value": "false"
        }
      ],
      "secrets": [
        {
          "valueFrom": "${CONSUL_SECRET_ARN}:token::",
          "name": "CONSUL_HTTP_TOKEN"
        },
        {
          "valueFrom": "${CONSUL_SECRET_ARN}:certificate::",
          "name": "CONSUL_CERTIFICATE"
        },
        {
          "valueFrom": "${CONSUL_SECRET_ARN}:client_config::",
          "name": "CONSUL_CONFIG"
        }
      ],
      "memory": 100,
      "image": "consul:1.8.3",
      "name": "consul-client"
    }
  ],
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT}:role/ecs/ecs-to-hcp-consul-ecs-task-execution-role",
  "family": "consul-client",
  "requiresCompatibilities": [
    "EC2"
  ],
  "networkMode": "host"
}
{
  "acl": {
    "enabled": true,
    "down_policy": "async-cache",
    "default_policy": "deny",
    "tokens": {
      "agent": "${client_acl_token}"
    }
  },
  "verify_outgoing": true,
  "datacenter": "${datacenter}",
  "encrypt": "${gossip_encrypt}",
  "server": false,
  "log_level": "INFO",
  "ui": true,
  "retry_join": [
    "${host}"
  ],
  "auto_encrypt": {
    "tls": true
  },
  "leave_on_terminate": true,
  "ca_file": "${ca_pem_file_path}",
  "ports": {
    "https": 8501,
    "http": -1,
    "grpc": 8502
  },
  "domain": "consul"
}